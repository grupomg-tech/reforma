# ===========================================
# Projeto Reforma/Eagle - Variáveis de Ambiente
# ===========================================
# Copie este arquivo para .env e configure os valores

# Django
SECRET_KEY=sua-chave-secreta-aqui-mude-em-producao
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Banco de Dados (SQLite para desenvolvimento)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Para PostgreSQL em produção:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=reforma_db
# DB_USER=reforma_user
# DB_PASSWORD=sua_senha_aqui
# DB_HOST=localhost
# DB_PORT=5432

# Celery / Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ngrok (opcional - para túnel externo)
NGROK_AUTH_TOKEN=seu_token_ngrok_aqui
USE_NGROK=true

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CSRF
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Logging
DJANGO_LOG_LEVEL=INFO
